{# Language detection for footer #}
{% set isEn = (page.lang == 'en') or (page.url and ('/en' in page.url)) %}
{% set langPrefix = '/en' if isEn else '' %}

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-column">
        <h4>{{ 'Navigation' if isEn else 'Navigation' }}</h4>
        <ul>
          <li><a href="{{ langPrefix }}/index.html">{{ 'Home' if isEn else 'Home' }}</a></li>
          <li><a href="{{ langPrefix }}/leistungen.html">{{ 'Services' if isEn else 'Leistungen' }}</a></li>
          <li><a href="{{ langPrefix }}/loesungen.html">{{ 'Solutions' if isEn else 'Lösungen' }}</a></li>
          <li><a href="{{ langPrefix }}/ueber-uns.html">{{ 'About Us' if isEn else 'Über uns' }}</a></li>
          <li><a href="{{ langPrefix }}/ressourcen.html">{{ 'Resources' if isEn else 'Ressourcen' }}</a></li>
          <li><a href="{{ langPrefix }}/kontakt.html">{{ 'Contact' if isEn else 'Kontakt' }}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{{ 'Services' if isEn else 'Leistungen' }}</h4>
        <ul>
          <li><a href="{{ langPrefix }}/nis2-readiness.html">NIS2 Readiness Sprint</a></li>
          <li><a href="{{ langPrefix }}/iec-62443.html">IEC 62443 Gap Assessment</a></li>
          <li><a href="{{ langPrefix }}/segmentation.html">{{ 'Network Segmentation' if isEn else 'Netzwerksegmentierung' }}</a></li>
          <li><a href="{{ langPrefix }}/ot-mdr.html">OT-MDR</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{{ 'Legal' if isEn else 'Rechtliches' }}</h4>
        <ul>
          <li><a href="{{ langPrefix }}/impressum.html">{{ 'Imprint' if isEn else 'Impressum' }}</a></li>
          <li><a href="{{ langPrefix }}/datenschutz.html">{{ 'Privacy' if isEn else 'Datenschutz' }}</a></li>
          <li><a href="{{ langPrefix }}/agb.html">{{ 'Terms' if isEn else 'AGB' }}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4>{{ 'Contact' if isEn else 'Kontakt' }}</h4>
        <p>
          {{ site.address.company }}<br />
          {{ site.address.street }}<br />
          {{ site.address.zipCity }}<br />
          <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a>
        </p>
      </div>
    </div>

    <div class="footer-bottom">
      <a href="{{ langPrefix }}/index.html" class="footer-logo-type">Secure<span>Kern</span></a>
      <div class="footer-socials">
        <a href="#" target="_blank" rel="noopener" title="LinkedIn" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
        <a href="#" target="_blank" rel="noopener" title="Xing" aria-label="Xing"><i class="fab fa-xing"></i></a>
      </div>
      <p>&copy; {{ meta.year }} SecureKern GmbH. {{ 'All rights reserved.' if isEn else 'Alle Rechte vorbehalten.' }}</p>
    </div>
  </div>
</footer>

